{
    "name": "leeweizhang/yunxin-sdk",
    "description": "PHP Package to integrate Yunxin API.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Wei Zhang",
            "email": "leeweizhang24@gmail.com"
        }
    ],
    "autoload":{
        "psr-4": {
            "WZ\\Yunxin\\" : "src/"
        }
    },
    "autoload-dev":{
        "psr-4": {
            "WZ\\Yunxin\\Tests\\" : "tests/"
        }
    },
    "scripts": {
